  journal       = {Nuclear Engineering and Technology},
  keywords      = {Software Quality},
  month         = apr,
  number        = {2},
  pages         = {404-418},
  title         = {A Document-Driven Method for Certifying Scientific Computing Software for Use in Nuclear Safety Analysis},
